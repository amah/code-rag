# Embedding provider: openai | azure | local
EMBEDDING_PROVIDER=openai

# OpenAI settings (when provider=openai)
OPENAI_API_KEY=sk-...
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=text-embedding-ada-002

# Azure OpenAI settings (when provider=azure)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Local model settings (when provider=local)
LOCAL_MODEL_NAME=Xenova/all-MiniLM-L6-v2
LOCAL_MODEL_CACHE_DIR=./.model-cache

# OpenSearch
OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_INDEX=code_chunks
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Repositories
REPOS_ROOT_DIR=/path/to/your/repos

# Server
REST_PORT=3000
